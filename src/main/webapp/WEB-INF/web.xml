<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
  http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <!--
      This listener loads a class in the default package called ScalatraBootstrap.
      That class should implement org.scalatra.LifeCycle.  Your app can be
      configured in Scala code there.
    -->
    <listener>
        <listener-class>org.scalatra.servlet.ScalatraListener</listener-class>
    </listener>

    <!-- Virtuoso SPARQL Endpoint -->
    <context-param>
        <param-name>virtuosoUri</param-name>
        <param-value>http://localhost:3003/sparql-auth</param-value>
        <!--
        <param-value>http://gstore-virtuoso:3003/sparql-auth</param-value>
        -->
    </context-param>
    <context-param>
        <param-name>virtuosoUser</param-name>
        <param-value>dba</param-value>
    </context-param>
    <context-param>
        <param-name>virtuosoPass</param-name>
        <param-value>everyoneknows</param-value>
    </context-param>

    <context-param>
        <param-name>baseDir</param-name>
        <param-value>./databus</param-value>
    </context-param>

    <!-- GIT -->
    <!-- Comment this out to enable remote git with gitlab -->
    <context-param>
        <param-name>gitLocalDir</param-name>
        <param-value>./databus/git/</param-value>
    </context-param>

    <!--  Comment this in to enable remote git with gitlab
    <context-param>
        <param-name>gitHost</param-name>
        <param-value>gitlab</param-value>
    </context-param>
    <context-param>
        <param-name>gitSchema</param-name>
        <param-value>http</param-value>
    </context-param>
    <context-param>
        <param-name>gitApiUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>gitApiPass</param-name>
        <param-value>password</param-value>
    </context-param>
    -->

</web-app>
