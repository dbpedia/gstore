<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
  http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <!--
      This listener loads a class in the default package called ScalatraBootstrap.
      That class should implement org.scalatra.LifeCycle.  Your app can be
      configured in Scala code there.
    -->
    <listener>
        <listener-class>org.scalatra.servlet.ScalatraListener</listener-class>
    </listener>

    <!-- context params can also be set here-->
    <!--context-param>
      <param-name>requireDBpediaAccount</param-name>
      <param-value>true</param-value>
    </context-param-->
    <context-param>
        <param-name>gitHost</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>gitSchema</param-name>
        <param-value>http</param-value>
    </context-param>
    <context-param>
        <param-name>gitPort</param-name>
        <param-value>8088</param-value>
    </context-param>
    <context-param>
        <param-name>gitApiToken</param-name>
        <param-value>sAmsxkNp4RGjFhxcq1rW</param-value>
    </context-param>
    <context-param>
        <param-name>authCheckUrl</param-name>
        <param-value>https://databus.dbpedia.org/auth/realms/databus/protocol/openid-connect/userinfo</param-value>
    </context-param>

</web-app>
